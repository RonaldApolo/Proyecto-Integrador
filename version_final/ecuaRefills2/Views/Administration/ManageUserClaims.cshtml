@model ecuaRefills2.Entities.UserClaims

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Administracion de permisos de usuarios</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Cliams.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Cliams[i].ClaimType" />
                    <input asp-for="@Model.Cliams[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Cliams[i].IsSelected">
                        @Model.Cliams[i].ClaimType
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Actualizar" class="btn btn-info" style="width:auto" />
            <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn btn-primary"
               style="width:auto">Cancelar</a>
        </div>
    </div>
</form>

@model ecuaRefills2.Entities.Ciudad

@{
    ViewData["Title"] = "BorrarCiudad";
}

<div class="row">
    <div class="col-md-10">
        <h1>Clientes - Borrar</h1>
    </div>
    <div class="col-md-2">
        <a asp-action="CiudadIndex" class="btn btn-primary float-right" style=" margin: 2px; border-radius:4px;">Regresar</a>
    </div>
</div>
<hr />

<h3  class="text-danger">¿Está seguro de eliminar la siguiente ciudad?</h3>
<br />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Provincia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Provincia.Nombre)
        </dd>
    </dl>

    <form asp-action="BorrarCiudad">
        <input type="hidden" asp-for="CiudadId" />
        <input type="submit" value="Eliminar Ciudad" style="margin: 2px; border-radius: 4px; margin-top: 60px;" class="btn btn-danger" />
    </form>
</div>

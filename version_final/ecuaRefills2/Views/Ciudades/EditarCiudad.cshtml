@model ecuaRefills2.Entities.Ciudad

@{
    ViewData["Title"] = "EditarCiudad";
}

<div class="row">
    <div class="col-md-10">
        <h1>Editar Ciudad</h1>
    </div>
    <div class="col-md-2">
        <a asp-action="CiudadIndex" class="btn btn-primary float-right" style=" margin: 2px; border-radius:4px;">Regresar</a>
    </div>
</div>
<hr />
<br />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditarCiudad" class="form-row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CiudadId" />
            <div class="form-group col-md-6">
                <label asp-for="Nombre" class="control-label"></label>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="bi bi-geo-alt"></i></div>
                    </div>
                    <input asp-for="Nombre" class="form-control" />
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ProvinciaId" class="control-label"></label>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="bi bi-building"></i></div>
                    </div>
                    <select asp-for="ProvinciaId" class="form-control" asp-items="ViewBag.Provincias"></select>
                </div>
                <span asp-validation-for="ProvinciaId" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-12">
                <input type="submit" value="Guardar" style="margin: 2px; border-radius: 4px; margin-top: 80px;" class="btn btn-info float-right" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
